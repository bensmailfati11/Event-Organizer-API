{{!-- Hero section with animated background --}}
<section class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10">
    <div class="absolute -top-20 -left-20 h-64 w-64 rounded-full bg-indigo-300 blur-3xl opacity-40 animate-pulse"></div>
    <div class="absolute -bottom-24 -right-24 h-72 w-72 rounded-full bg-fuchsia-300 blur-3xl opacity-40 animate-ping"></div>
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 h-56 w-56 rounded-full bg-sky-300 blur-3xl opacity-30 animate-bounce"></div>
  </div>

  <div class="mx-auto max-w-6xl px-4 py-20">
    <div class="grid items-center gap-10 md:grid-cols-2">
      <div>
        <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-gray-900">
          Bring your events to life
        </h1>
        <p class="mt-4 text-lg text-gray-600">
          A professional event management platform: create, publish, and attend events.
          Secure login, role-based access, and a clean dashboard for members and admins.
        </p>
        <div class="mt-8 flex flex-wrap gap-3">
          <a href="/events" class="inline-flex items-center rounded-md bg-indigo-600 px-5 py-3 text-white font-medium hover:bg-indigo-700">Explore Events</a>
          {{#if user}}
            <a href="/member" class="inline-flex items-center rounded-md bg-white px-5 py-3 text-indigo-700 ring-1 ring-indigo-200 hover:bg-indigo-50">Member Dashboard</a>
            {{#if (eq user.role "admin")}}
              <a href="/admin" class="inline-flex items-center rounded-md bg-white px-5 py-3 text-emerald-700 ring-1 ring-emerald-200 hover:bg-emerald-50">Admin Dashboard</a>
            {{/if}}
          {{else}}
            <a href="/login" class="inline-flex items-center rounded-md bg-white px-5 py-3 text-indigo-700 ring-1 ring-indigo-200 hover:bg-indigo-50">Login</a>
            <a href="/register" class="inline-flex items-center rounded-md bg-white px-5 py-3 text-emerald-700 ring-1 ring-emerald-200 hover:bg-emerald-50">Create account</a>
          {{/if}}
        </div>
      </div>

      {{!-- Simple animated card preview --}}
      <div class="relative">
        <div class="animate-[float_6s_ease-in-out_infinite]">
          <div class="rounded-xl bg-white shadow-xl ring-1 ring-black/5 p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900">Tech Meetup 2025</h3>
              <span class="text-xs px-2 py-1 rounded-full bg-green-100 text-green-700">published</span>
            </div>
            <p class="mt-2 text-sm text-gray-600">Network with developers, share knowledge, and build together.</p>
            <dl class="mt-4 grid grid-cols-2 gap-4 text-sm text-gray-700">
              <div><dt class="font-medium">Date</dt><dd>Dec 15, 2025</dd></div>
              <div><dt class="font-medium">Location</dt><dd>Paris</dd></div>
              <div><dt class="font-medium">Capacity</dt><dd>50</dd></div>
              <div><dt class="font-medium">Spots left</dt><dd>18</dd></div>
            </dl>
            <div class="mt-6 flex gap-2">
              <a href="/events" class="rounded-md bg-indigo-600 px-4 py-2 text-white text-sm hover:bg-indigo-700">See all events</a>
              {{#if user}}
                <a href="/member" class="rounded-md bg-gray-100 px-4 py-2 text-gray-800 text-sm hover:bg-gray-200">Register</a>
              {{else}}
                <a href="/login" class="rounded-md bg-gray-100 px-4 py-2 text-gray-800 text-sm hover:bg-gray-200">Login to register</a>
              {{/if}}
            </div>
          </div>
        </div>
        <style>
          @keyframes float { 0% { transform: translateY(0) } 50% { transform: translateY(-8px) } 100% { transform: translateY(0) } }
        </style>
      </div>
    </div>
  </div>
</section>

{{!-- What you can do section --}}
<section class="mx-auto max-w-6xl px-4 py-12">
  <h2 class="text-2xl font-bold text-gray-900">What you can do</h2>
  <p class="mt-2 text-gray-600">Clear spaces for members and admins to run great events.</p>
  <div class="mt-8 grid gap-6 md:grid-cols-3">
    <div class="rounded-xl bg-white p-6 shadow ring-1 ring-black/5">
      <div class="text-indigo-600 font-semibold">Members</div>
      <ul class="mt-3 list-disc pl-5 text-sm text-gray-700 space-y-1">
        <li>Browse published events</li>
        <li>Register/unregister with one click</li>
        <li>See your registrations in a dedicated space</li>
      </ul>
      <a href="/member" class="mt-4 inline-block text-indigo-600 text-sm hover:underline">Open member dashboard →</a>
    </div>
    <div class="rounded-xl bg-white p-6 shadow ring-1 ring-black/5">
      <div class="text-emerald-600 font-semibold">Organizers</div>
      <ul class="mt-3 list-disc pl-5 text-sm text-gray-700 space-y-1">
        <li>Create and edit your events</li>
        <li>Publish when ready</li>
        <li>Manage capacity and attendees</li>
      </ul>
      <a href="/admin" class="mt-4 inline-block text-emerald-600 text-sm hover:underline">Open organizer/admin dashboard →</a>
    </div>
    <div class="rounded-xl bg-white p-6 shadow ring-1 ring-black/5">
      <div class="text-rose-600 font-semibold">Admins</div>
      <ul class="mt-3 list-disc pl-5 text-sm text-gray-700 space-y-1">
        <li>Full control over all events</li>
        <li>Publish/unpublish, update, delete</li>
        <li>Resolve issues across the platform</li>
      </ul>
      <a href="/admin" class="mt-4 inline-block text-rose-600 text-sm hover:underline">Go to admin →</a>
    </div>
  </div>
</section>

{{!-- Quick start section --}}
<section class="mx-auto max-w-6xl px-4 pb-16">
  <div class="rounded-2xl bg-gradient-to-r from-indigo-600 to-fuchsia-600 p-1">
    <div class="rounded-2xl bg-white p-8 md:p-10">
      <h3 class="text-xl font-bold text-gray-900">Get started</h3>
      <p class="mt-2 text-gray-700">Create an account, then explore events or head straight to your dashboard.</p>
      <div class="mt-6 flex flex-wrap gap-3">
        {{#if user}}
          <a href="/events" class="inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white text-sm hover:bg-indigo-700">Explore events</a>
          <a href="/member" class="inline-flex items-center rounded-md bg-gray-100 px-4 py-2 text-gray-800 text-sm hover:bg-gray-200">Open member dashboard</a>
          {{#if (eq user.role "admin")}}
            <a href="/admin" class="inline-flex items-center rounded-md bg-emerald-600 px-4 py-2 text-white text-sm hover:bg-emerald-700">Open admin</a>
          {{/if}}
        {{else}}
          <a href="/register" class="inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white text-sm hover:bg-indigo-700">Create account</a>
          <a href="/login" class="inline-flex items-center rounded-md bg-white px-4 py-2 text-indigo-700 ring-1 ring-indigo-200 text-sm hover:bg-indigo-50">Login</a>
        {{/if}}
      </div>
    </div>
  </div>
</section>
