<div class="row">
    <div class="col-12">
        <h2>My Dashboard</h2>
        <p class="text-muted">Manage your events and account</p>
    </div>
</div>

{{#if (eq user.role "organizer")}}
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">My Events</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Manage your organized events</span>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEventModal">Create New Event</button>
                </div>

                {{#if myEvents}}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Date</th>
                                <th>Location</th>
                                <th>Attendees</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each myEvents}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td>{{formatDate this.date}}</td>
                                <td>{{this.location}}</td>
                                <td>{{this.attendeesCount}}/{{this.capacity}}</td>
                                <td>
                                    <span class="badge bg-{{#if (eq this.status 'published')}}success{{else}}secondary{{/if}}">
                                        {{this.status}}
                                    </span>
                                </td>
                                <td>
                                    <a href="/events/{{this.id}}" class="btn btn-sm btn-outline-primary">View</a>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="editEvent('{{this.id}}')">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteEvent('{{this.id}}')">Delete</button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <p class="text-muted">You haven't created any events yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/if}}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">My Registrations</h5>
            </div>
            <div class="card-body">
                {{#if registeredEvents}}
                <div class="row">
                    {{#each registeredEvents}}
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">{{this.title}}</h6>
                                <p class="card-text">{{this.description}}</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        üìÖ {{formatDate this.date}}<br>
                                        üìç {{this.location}}
                                    </small>
                                </p>
                                <div class="d-flex justify-content-between">
                                    <a href="/events/{{this.id}}" class="btn btn-outline-primary btn-sm">View Details</a>
                                    <form action="/events/{{this.id}}/register" method="POST" class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-sm">Unregister</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <p class="text-muted">You haven't registered for any events yet.</p>
                <a href="/events" class="btn btn-outline-primary">Browse Events</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<!-- Create Event Modal -->
<div class="modal fade" id="createEventModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/events" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="eventTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="eventTitle" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="eventDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="eventDescription" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="eventDate" class="form-label">Date</label>
                        <input type="datetime-local" class="form-control" id="eventDate" name="date" required>
                    </div>
                    <div class="mb-3">
                        <label for="eventLocation" class="form-label">Location</label>
                        <input type="text" class="form-control" id="eventLocation" name="location" required>
                    </div>
                    <div class="mb-3">
                        <label for="eventCapacity" class="form-label">Capacity</label>
                        <input type="number" class="form-control" id="eventCapacity" name="capacity" min="1" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Event</button>
                </div>
            </form>
        </div>
    </div>
</div>

