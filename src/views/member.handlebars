<div class="container mx-auto px-4 py-8 reveal">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Member Dashboard</h1>

  <div class="mb-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">Available Events</h2>
    {{#if events.length}}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each events}}
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:-translate-y-1 glow">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{{this.title}}</h3>
              <p class="text-gray-600 mb-4">{{this.description}}</p>
              <div class="space-y-2 text-sm text-gray-500">
                <p><strong>Date:</strong> {{formatDate this.date}}</p>
                <p><strong>Location:</strong> {{this.location}}</p>
                <p><strong>Available Spots:</strong> {{subtract this.capacity this.attendees.length}}</p>
              </div>
              <div class="mt-4 flex gap-2">
                <a href="/events/{{this._id}}/view" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Open</a>
                <button onclick="registerForEvent('{{this._id}}')" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Register</button>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No events available for registration.</p>
      </div>
    {{/if}}
  </div>

  <div>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">My Registrations</h2>
    {{#if userEvents.length}}
      <div class="grid grid-cols-1 md:grid-cols-2 lg-grid-cols-3 gap-6">
        {{#each userEvents}}
          <div class="bg-green-50 border border-green-200 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{{this.title}}</h3>
            <p class="text-gray-600 mb-4">{{this.description}}</p>
            <div class="space-y-2 text-sm text-gray-500">
              <p><strong>Date:</strong> {{formatDate this.date}}</p>
              <p><strong>Location:</strong> {{this.location}}</p>
              <p><strong>Attendees:</strong> {{this.attendees.length}} / {{this.capacity}}</p>
            </div>
            <div class="mt-4 flex justify-between">
              <a href="/events/{{this._id}}/view" class="text-indigo-600 hover:text-indigo-800 text-sm">Open</a>
              <button onclick="unregisterFromEvent('{{this._id}}')" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded text-xs">Unregister</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">You haven't registered for any events yet.</p>
      </div>
    {{/if}}
  </div>
</div>

<script>
  function getToken() { return window.SERVER_TOKEN || localStorage.getItem('token'); }
  async function registerForEvent(id) {
    try {
      const res = await fetch(`/api/events/${id}/register`, { method: 'POST', headers: { 'Authorization': 'Bearer ' + getToken() } });
      if (res.ok) { alert('Registered!'); location.reload(); } else { const e = await res.json(); alert(e.message || 'Failed'); }
    } catch (e) { alert('Error'); }
  }
  async function unregisterFromEvent(id) {
    try {
      const res = await fetch(`/api/events/${id}/register`, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + getToken() } });
      if (res.ok) { alert('Unregistered!'); location.reload(); } else { const e = await res.json(); alert(e.message || 'Failed'); }
    } catch (e) { alert('Error'); }
  }
</script>
